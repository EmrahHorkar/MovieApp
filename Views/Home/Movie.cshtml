@model IEnumerable<MovieApp.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

<p>
    <a asp-action="CreateMovie" class="btn btn-primary">Create New Movie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Director</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Title</td>
                <td>@movie.Description</td>
                <td>@movie.Director</td>
                <td>@movie.Category.Name</td>
                <td>
                    <a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="DeleteMovie" asp-route-id="@movie.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
