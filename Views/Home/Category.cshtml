@model IEnumerable<MovieApp.Models.Category>
@{
    ViewData["Title"] = "Category";
}   

<!-- Button trigger modal -->
<button type="button" onclick="$('#CategoryModel').modal('show')" class="btn btn-primary">Add Category</button>
<table class="table table-hover">
    <thead>
    <th scope="col">Id</th>
    <th scope="col">Name</th>
    <th scope="col"></th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>
                <td>
                    <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="DeleteCategory">Delete</a>
                    <a class="btn btn-secondary" asp-route-id="@item.Id" asp-action="EditCategory">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Modal -->
<div class="modal fade" id="CategoryModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Category</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="POST" action="/Home/AddCategory">
            <div class="modal-body">
              <div class="form-group">
                  <input type="hidden" name="Id" class="form-control" />
                    <input type="text" name= "Name" class="form-control" />
              </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
            </form>
        </div>
    </div>
</div>